/* 列表 */
.coupon-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 0 30rpx;
  border-radius: 20rpx;
}
.coupon-list .coupon-list_item {
    width: 100%;
    height: 110px;
    margin: 10rpx 0;
    background-color: #fff;
    border-radius: 5px;
}
.coupon-list .coupon-list_item .coupon-left {
      float: left;
      width: 45%;
      height: 100%;
      padding: 10rpx;
}
.coupon-list .coupon-list_item .coupon-left image {
        width: 100%;
        height: 100%;
        opacity: 1;
}
.coupon-list .coupon-list_item .coupon-right {
      padding: 10rpx;
      width: 55%;
      float: left;
      border-radius: 0px 10px 10px 0px;
}
.coupon-list .coupon-list_item .coupon-right .name {
        color: #303133;
        font-size: 32rpx;
}
.coupon-list .coupon-list_item .coupon-right .valid {
        color: #909399;
        font-size: 28rpx;
        line-height: 40rpx;
}
.coupon-list .coupon-list_item .coupon-right .stock {
        color: #909399;
        font-size: 28rpx;
        line-height: 40rpx;
        margin-top: 10rpx;
}
.coupon-list .coupon-list_item .coupon-right .buy {
        float: right;
        width: 90px;
        height: 60rpx;
        border: 0.5px solid rgba(219, 63, 96, 0.4);
        border-radius: 30rpx;
        line-height: 60rpx;
        color: #FF3D45;
        font-size: 14px;
        text-align: center;
}

